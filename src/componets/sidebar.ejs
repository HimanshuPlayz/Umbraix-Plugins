<div class="bg-dark-light rounded-lg overflow-hidden shadow-lg border border-dark-lighter/50 transition-all duration-300 hover:shadow-xl hover:shadow-primary-600/10">
  <!-- Sidebar Header -->
  <div class="p-4 border-b border-dark-lighter bg-gradient-to-r from-dark-light to-dark-lighter">
    <h3 class="font-semibold text-lg flex items-center">
      <svg class="w-5 h-5 mr-2 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
      </svg>
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary-400 to-primary-600">Filters</span>
    </h3>
  </div>

  <!-- Search Box -->
  <div class="p-4 border-b border-dark-lighter">
    <div class="relative group">
      <input type="text" placeholder="Search plugins..." class="w-full bg-dark-base text-gray-300 px-4 py-2 pl-10 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500/50 transition-all duration-300 border border-dark-lighter/50 group-hover:border-primary-500/30">
      <svg class="w-5 h-5 text-gray-500 absolute left-3 top-2.5 group-hover:text-primary-500 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </div>
  </div>

  <!-- Categories Section -->
  <div class="p-4 border-b border-dark-lighter">
    <h4 class="font-medium text-sm text-gray-400 uppercase tracking-wider mb-3 flex items-center">
      <svg class="w-4 h-4 mr-1 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
      </svg>
      Categories
    </h4>
    <div class="space-y-2">
      <a href="/plugins" class="flex items-center px-3 py-2 rounded-lg transition-all duration-300 <%= !category ? 'bg-primary-600/20 text-primary-400 shadow-sm shadow-primary-600/10' : 'hover:bg-dark-lighter hover:text-primary-400 text-white hover:translate-x-1' %>">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
        </svg>
        <span>All Plugins</span>
        <span class="ml-auto bg-dark-base text-gray-400 text-xs px-2 py-1 rounded-full transition-all duration-300 group-hover:bg-primary-600/10 group-hover:text-primary-400"><%= typeof totalPlugins !== 'undefined' ? totalPlugins : 0 %></span>
      </a>
      
      <a href="/plugins?category=economy" class="flex items-center px-3 py-2 rounded-lg transition-all duration-300 <%= category === 'economy' ? 'bg-primary-600/20 text-primary-400 shadow-sm shadow-primary-600/10' : 'hover:bg-dark-lighter hover:text-primary-400 text-white hover:translate-x-1' %>">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>Economy</span>
        <span class="ml-auto bg-dark-base text-gray-400 text-xs px-2 py-1 rounded-full transition-all duration-300 group-hover:bg-primary-600/10 group-hover:text-primary-400"><%= typeof categoryCount !== 'undefined' && categoryCount.economy ? categoryCount.economy : 0 %></span>
      </a>
      
      <a href="/plugins?category=utility" class="flex items-center px-3 py-2 rounded-lg transition-all duration-300 <%= category === 'utility' ? 'bg-primary-600/20 text-primary-400 shadow-sm shadow-primary-600/10' : 'hover:bg-dark-lighter hover:text-primary-400 text-white hover:translate-x-1' %>">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span>Utility</span>
        <span class="ml-auto bg-dark-base text-gray-400 text-xs px-2 py-1 rounded-full transition-all duration-300 group-hover:bg-primary-600/10 group-hover:text-primary-400"><%= typeof categoryCount !== 'undefined' && categoryCount.utility ? categoryCount.utility : 0 %></span>
      </a>
      
      <a href="/plugins?category=admin" class="flex items-center px-3 py-2 rounded-lg transition-all duration-300 <%= category === 'admin' ? 'bg-primary-600/20 text-primary-400 shadow-sm shadow-primary-600/10' : 'hover:bg-dark-lighter hover:text-primary-400 text-white hover:translate-x-1' %>">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span>Admin Tools</span>
        <span class="ml-auto bg-dark-base text-gray-400 text-xs px-2 py-1 rounded-full transition-all duration-300 group-hover:bg-primary-600/10 group-hover:text-primary-400"><%= typeof categoryCount !== 'undefined' && categoryCount.admin ? categoryCount.admin : 0 %></span>
      </a>
      
      <a href="/plugins?category=gameplay" class="flex items-center px-3 py-2 rounded-lg transition-all duration-300 <%= category === 'gameplay' ? 'bg-primary-600/20 text-primary-400 shadow-sm shadow-primary-600/10' : 'hover:bg-dark-lighter hover:text-primary-400 text-white hover:translate-x-1' %>">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>Gameplay</span>
        <span class="ml-auto bg-dark-base text-gray-400 text-xs px-2 py-1 rounded-full transition-all duration-300 group-hover:bg-primary-600/10 group-hover:text-primary-400"><%= typeof categoryCount !== 'undefined' && categoryCount.gameplay ? categoryCount.gameplay : 0 %></span>
      </a>
    </div>
  </div>

  <!-- Price Filter -->
  <div class="p-4 border-b border-dark-lighter">
    <h4 class="font-medium text-sm text-gray-400 uppercase tracking-wider mb-3 flex items-center">
      <svg class="w-4 h-4 mr-1 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      Price
    </h4>
    <div class="space-y-2">
      <a href="<%= typeof category !== 'undefined' && category ? `/plugins?category=${category}` : '/plugins' %>" class="flex items-center px-3 py-2 rounded-lg transition-colors <%= typeof priceFilter === 'undefined' || !priceFilter ? 'bg-primary-600/20 text-primary-400' : 'hover:bg-dark-lighter text-gray-300' %>">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
        </svg>
        <span>All</span>
      </a>
      
      <a href="<%= typeof category !== 'undefined' && category ? `/plugins?category=${category}&price=free` : '/plugins?price=free' %>" class="flex items-center px-3 py-2 rounded-lg transition-all duration-300 <%= typeof priceFilter !== 'undefined' && priceFilter === 'free' ? 'bg-primary-600/20 text-primary-400 shadow-sm shadow-primary-600/10' : 'hover:bg-dark-lighter text-gray-300 hover:translate-x-1' %>">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11"></path>
        </svg>
        <span>Free</span>
      </a>
      
      <a href="<%= typeof category !== 'undefined' && category ? `/plugins?category=${category}&price=premium` : '/plugins?price=premium' %>" class="flex items-center px-3 py-2 rounded-lg transition-all duration-300 <%= typeof priceFilter !== 'undefined' && priceFilter === 'premium' ? 'bg-primary-600/20 text-primary-400 shadow-sm shadow-primary-600/10' : 'hover:bg-dark-lighter text-gray-300 hover:translate-x-1' %>">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>Premium</span>
      </a>
    </div>
  </div>

  <!-- Sort Options -->
  <div class="p-4 border-b border-dark-lighter">
    <h4 class="font-medium text-sm text-gray-400 uppercase tracking-wider mb-3 flex items-center">
      <svg class="w-4 h-4 mr-1 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"></path>
      </svg>
      Sort By
    </h4>
    <div class="space-y-2">
      <a href="<%= typeof generateSortUrl !== 'undefined' ? generateSortUrl('relevance') : '/plugins' %>" class="flex items-center px-3 py-2 rounded-lg transition-all duration-300 <%= typeof sortBy !== 'undefined' && (sortBy === 'relevance' || !sortBy) ? 'bg-primary-600/20 text-primary-400 shadow-sm shadow-primary-600/10' : 'hover:bg-dark-lighter hover:text-primary-400 text-white hover:translate-x-1' %>">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
        </svg>
        <span class="text-white">Relevance</span>
      </a>
      
      <a href="<%= typeof generateSortUrl !== 'undefined' ? generateSortUrl('newest') : '/plugins?sort=newest' %>" class="flex items-center px-3 py-2 rounded-lg transition-all duration-300 <%= typeof sortBy !== 'undefined' && sortBy === 'newest' ? 'bg-primary-600/20 text-primary-400 shadow-sm shadow-primary-600/10' : 'hover:bg-dark-lighter hover:text-primary-400 text-white hover:translate-x-1' %>">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-white">Newest</span>
      </a>
      
      <a href="<%= typeof generateSortUrl !== 'undefined' ? generateSortUrl('downloads') : '/plugins?sort=downloads' %>" class="flex items-center px-3 py-2 rounded-lg transition-all duration-300 <%= typeof sortBy !== 'undefined' && sortBy === 'downloads' ? 'bg-primary-600/20 text-primary-400 shadow-sm shadow-primary-600/10' : 'hover:bg-dark-lighter hover:text-primary-400 text-white hover:translate-x-1' %>">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
        </svg>
        <span>Downloads</span>
      </a>
    </div>
  </div>

  <!-- Reset Filters -->
  <div class="p-4">
    <a href="/plugins" class="flex items-center justify-center px-4 py-2 bg-dark-base hover:bg-dark-lighter text-white rounded-lg transition-all duration-300 hover:shadow-md hover:shadow-primary-600/5 group">
      <svg class="w-5 h-5 mr-2 group-hover:rotate-180 transition-transform duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
      </svg>
      <span class="group-hover:text-primary-400 transition-colors duration-300">Reset Filters</span>
    </a>
  </div>
</div>