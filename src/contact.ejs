                  <div class="absolute inset-0 border border-primary-500/0 rounded-lg group-focus-within/input:border-primary-500/20 pointer-events-none transition-all duration-300"></div>
                </div>
              </div>
              
              <div class="relative group/input">
                <label for="email" class="block text-sm font-medium text-gray-300 mb-1 group-focus-within/input:text-primary-400 transition-colors duration-200">Email Address</label>
                <div class="relative">
                  <input type="email" id="email" name="email" class="w-full px-4 py-3 bg-dark-base/80 border border-dark-lighter rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-white placeholder-gray-500 transition-all duration-300 shadow-sm">
                  <div class="absolute inset-0 border border-primary-500/0 rounded-lg group-focus-within/input:border-primary-500/20 pointer-events-none transition-all duration-300"></div>
                </div>
              </div>
              
              <div class="relative group/input">
                <label for="subject" class="block text-sm font-medium text-gray-300 mb-1 group-focus-within/input:text-primary-400 transition-colors duration-200">Subject</label>
                <div class="relative">
                  <select id="subject" name="subject" class="w-full px-4 py-3 bg-dark-base/80 border border-dark-lighter rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-white transition-all duration-300 shadow-sm appearance-none">
                    <option value="general">General Inquiry</option>
                    <option value="support">Plugin Support</option>
                    <option value="bug">Bug Report</option>
                    <option value="feature">Feature Request</option>
                    <option value="business">Business Inquiry</option>
                  </select>
                  <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </div>
                  <div class="absolute inset-0 border border-primary-500/0 rounded-lg group-focus-within/input:border-primary-500/20 pointer-events-none transition-all duration-300"></div>
                </div>
              </div>
              
              <div class="relative group/input">
                <label for="message" class="block text-sm font-medium text-gray-300 mb-1 group-focus-within/input:text-primary-400 transition-colors duration-200">Message</label>
                <div class="relative">
                  <textarea id="message" name="message" rows="6" class="w-full px-4 py-3 bg-dark-base/80 border border-dark-lighter rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-white placeholder-gray-500 transition-all duration-300 shadow-sm resize-none"></textarea>
                  <div class="absolute inset-0 border border-primary-500/0 rounded-lg group-focus-within/input:border-primary-500/20 pointer-events-none transition-all duration-300"></div>
                </div>
              </div>
              
              <div>
                <button type="submit" class="group relative w-full px-6 py-3 rounded-lg bg-primary-600 hover:bg-primary-700 text-white font-medium transition-all shadow-lg shadow-primary-600/20 hover:shadow-primary-600/40 text-center overflow-hidden">
                  <span class="absolute inset-0 w-full h-full transition-all duration-300 scale-0 group-hover:scale-100 group-hover:bg-primary-500/20 rounded-lg"></span>
                  <span class="relative flex items-center justify-center">Send Message
                    <svg class="w-5 h-5 ml-2 inline-block group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                  </span>
                </button>
              </div>
            </form>
          </div>
          
          <!-- Contact Info -->
