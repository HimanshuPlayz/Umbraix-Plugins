  <!-- FAQ Accordion Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Get all FAQ question buttons
      const faqQuestions = document.querySelectorAll('.faq-question');
      
      // Add click event listener to each question
      faqQuestions.forEach(question => {
        question.addEventListener('click', function() {
          // Get the parent FAQ item
          const faqItem = this.closest('.faq-item');
          
          // Get the answer element
          const answer = faqItem.querySelector('.faq-answer');
          
          // Get the icon element
          const icon = faqItem.querySelector('.faq-icon');
          
          // Check if this FAQ item is already active
          const isActive = faqItem.classList.contains('active');
          
          // First close all FAQ items
          document.querySelectorAll('.faq-item').forEach(item => {
            const itemAnswer = item.querySelector('.faq-answer');
            const itemIcon = item.querySelector('.faq-icon');
            
            // Skip the current item
            if (item !== faqItem) {
              item.classList.remove('active');
              itemAnswer.style.maxHeight = '0';
              itemAnswer.classList.remove('opacity-100');
              itemAnswer.classList.add('opacity-0');
              itemIcon.classList.remove('rotate-180');
            }
          });
          
          // Toggle the current FAQ item
          if (isActive) {
            // Close this FAQ item
            faqItem.classList.remove('active');
            answer.style.maxHeight = '0';
            answer.classList.remove('opacity-100');
            answer.classList.add('opacity-0');
            icon.classList.remove('rotate-180');
          } else {
            // Open this FAQ item
            faqItem.classList.add('active');
            answer.style.maxHeight = answer.scrollHeight + 'px';
            answer.classList.remove('opacity-0');
            answer.classList.add('opacity-100');
            icon.classList.add('rotate-180');
          }
        });
      });
      
      // Open the first FAQ item by default
      if (faqQuestions.length > 0) {
        const firstFaqItem = faqQuestions[0].closest('.faq-item');
        const firstAnswer = firstFaqItem.querySelector('.faq-answer');
        const firstIcon = firstFaqItem.querySelector('.faq-icon');
        
        firstFaqItem.classList.add('active');
        firstAnswer.style.maxHeight = firstAnswer.scrollHeight + 'px';
        firstAnswer.classList.remove('opacity-0');
        firstAnswer.classList.add('opacity-100');
        firstIcon.classList.add('rotate-180');
      }
    });
  </script>
