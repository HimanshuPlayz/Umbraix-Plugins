            <!-- Inner glow effect -->
            <div class="absolute inset-0 bg-gradient-to-br from-primary-600/5 via-transparent to-primary-500/5 opacity-70 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <!-- Subtle animated corner accents -->
            <div class="absolute bottom-0 right-0 w-16 h-16 overflow-hidden">
