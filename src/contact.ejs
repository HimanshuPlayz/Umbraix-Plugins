      <div class="absolute inset-0 bg-gradient-to-br from-primary-800/10 via-primary-900/5 to-dark-base animate-gradient" style="background-size: 200% 200%; animation-duration: 15s;"></div>
      
      <!-- Animated grid pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="h-full w-full bg-[url('data:image/svg+xml;base64,')]">
        </div>
      </div>
      
      <div class="container mx-auto px-4 md:px-6 relative z-10">
        <div class="max-w-3xl mx-auto">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-900/50 text-primary-300 mb-4 border border-primary-800/30 shadow-lg shadow-primary-900/10 mx-auto block w-fit">
            <span class="w-2 h-2 rounded-full bg-primary-400 mr-2 animate-pulse"></span>
            <span class="tracking-wide">Got Questions?</span>
          </span>
          <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center bg-gradient-to-r from-primary-500 via-primary-400 to-primary-600 text-transparent bg-clip-text relative inline-block animate-gradient mx-auto block">Frequently Asked Questions</h2>
          
